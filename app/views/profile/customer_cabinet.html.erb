<section class="customer__body">
    <div class="customer-body-wrapper">

      <% %w(new_apply applied choose_applier).each do |state| %>

      <div class="customer__apply-item">
        <div class="apply-card">

              <div class="apply-card-head">
                <div class="apply-card-head-title"><%= 'Bug fix - Mobile Development (IOS)' %></div>
                <div class="apply-card-head-dots"><%= '||' %></div>
              </div>

              <div class="apply-card-info">
