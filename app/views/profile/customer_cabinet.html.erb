<section class="top-menu">
  <%= link_to '#' do %>
    <%= content_tag :span, t(:active), class: "top-menu__item-active" %>
  <% end %>
  <%= link_to "#" do %>
    <%= content_tag :span, t(:inactive), class: "top-menu__item" %>
  <% end %>
</section>


<section class="customer__body">
    <div class="customer-body-wrapper">

      <% %w(new_apply applied choose_applier).each do |state| %>

        <%= link_to '', class:'customer__apply-item' do  %>
            <div class="apply-card">

                  <div class="apply-card-head">
                    <div class="apply-card-head-title"><%= 'Bug fix - Mobile Development (IOS)' %></div>
                    <div class="apply-card-head-dots">
                    
                    </div>
                  </div>

                  <div class="apply-card-info">
                    <div class="apply-card-info-type"> <%= 'тестовое задание' %></div>
                    <div class="apply-card-info-time"> <%= 'Опубликовано 22.08.2019' %></div>
                    <div class="apply-card-info-time"> <%= 'Истекает через 15 дней' %></div>
                  </div>

                  <div class="apply-card-body">
                    <%= 'Have few Bug Expertse Needed iOS Developer & Android Developer. Swift and ObjectiveC...' %>
                  </div>

                  <div class="apply-card-skills">
                    <% ['iOS Jobs', 'Swift Jobs', 'NativeScript Jobs'].each do |item| %>
                    <div class="apply-card-skills-item"><%= item %></div>
                      <% end %>
                  </div>

                  <div class="apply-card-footer">
                    <% if state == 'new_apply' %>
                      <div class="apply-card-footer-new"><%= t(:new_apply) %></div>
                      <div class="apply-card-footer-new_dig"><%= 23 %></div>
                      <div class="apply-card-footer-all_apply"><%= t(:all_apply) %></div>
                      <div class="apply-card-footer-all_dig"><%= 40 %></div>
                      <div class="apply-card-footer-views">
                        <%= image_tag("views_eye.svg", alt: "eye") %>
                        <%= 144 %>
                      </div>

                    <% elsif state == 'applied'%>
                      <div class="apply-card-footer-new">
                        <%= t(:project_assigned) %>
                      </div>
                      <div class="apply-card-footer-assignes_developer">
                        <%= 'Ilia Lesyn' %>
                      </div>
                    <% elsif state == 'choose_applier'%>
                      <div class="apply-card-footer-choose_developer"><%= t(:choose_developer) %></div>
                      <div class="apply-card-footer-allapply"><%= t(:feedback) %></div>
                      <div class="apply-card-footer-alldig">20</div>
                      <div class="apply-card-footer-views">
                        <%= image_tag("views_eye.svg", alt: "eye") %>
                        <%= 144 %>
                      </div>
                    <% end %>
                  </div>
           </div>
        <% end %>
    <% end %>

      <div class="customer__apply-item background-color-empty-card">
        <div class="apply-card apply-card-add_project">
              <div class="apply-card-add_project-plus">+</div>
              <div><%= t(:add_new_project_or_task) %></div>
        </div>
      </div>


        </div>
</section>
