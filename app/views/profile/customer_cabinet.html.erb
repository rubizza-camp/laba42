<div class="customer">
  <section class="customer__dashboard">
    <div class="customer-relative">
      <%= image_tag("arrow.svg", alt: "arrow", class: "customer__arrow") %>
      <%= link_to do %>
        <%= content_tag :span, image_tag("folders.svg", alt: "folders", class: "customer__img") + t(:projects) %>
      <% end %>
    </div>
    <div class="customer-relative">
      <%= image_tag("arrow.svg", alt: "arrow", class: "customer__arrow") %>
      <%= link_to do %>
        <%= content_tag :span, image_tag("messages.svg", alt: "messages", class: "customer__img") + t(:messages) %>
      <% end %></div>
    <div class="customer-relative">
      <%= image_tag("arrow.svg", alt: "arrow", class: "customer__arrow") %>
      <%= link_to do %>
        <%= content_tag :span, image_tag("avatar.svg", alt: "avatar", class: "customer__img") + t(:my_profile) %>
      <% end %>
    </div>
    <div class="customer-relative">
      <%= image_tag("arrow.svg", alt: "arrow", class: "customer__arrow") %>
      <%= link_to do %>
        <%= content_tag :span, image_tag("settings.svg", alt: "settings", class: "customer__img") + t(:settings) %>
      <% end %>
    </div>
    <div class="customer-relative">
      <%= image_tag("arrow.svg", alt: "arrow", class: "customer__arrow") %>
      <%= link_to new_project_path do %>
        <%= content_tag :span, image_tag("add.svg", alt: "add", class: "customer__img") + t(:add_task) %>
      <% end %>
    </div>
  </section>

  <section class="customer__body">
    <div class="customer-body-wrapper">
      <h1 class="customer__title"><%= t(:responses) %> (<%= @projects.inject(0) { |sum,p| sum + p.applies.size } %>)</h1>

        <div class="start-secondary__wrapper">
          <% @projects.each do |project|  %>
            <div class="start-secondary__item">
              <%= link_to project_path(project), style: 'text-decoration: none; color: black;'  do %>
                <div class="start-secondary__item-wrapper">
                  <h5 class="start-secondary__item-title" ><%= project.title %></h5>
                  <span class="start-secondary__item-subtitle-item"><%= project.project_type %> <%= project.cost %></span>
                  <span class="start-secondary__item-subtitle-item"><%= t(:published) %><%= project.created_at.localtime.strftime('%d/%m/%Y') %></span>
                  <span class="start-secondary__item-subtitle-item">Истекает через <%= (Date.today..project.deadline).count %> дней</span>
                  <p class="start-secondary__item-text" ><%= project.info[0..120] %>...</p>
                  <p class="start-secondary__item-subtitle-item"><%= project.skills %></p>
                  <%= link_to project_applies_path(project_id: project.id) do %>
                    <span class="start-secondary__item-text" > Новые отклики <%= project.applies.size %></span>
                    <span class="start-secondary__item-text" > Всего откликов <%= project.applies.size %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

      <div class="customer__fixed">
        <%= link_to new_project_path do %>
          <%= image_tag("plus.svg", alt: "plus") %>
        <% end %>
      </div>
    </div>
  </section>
</div>
