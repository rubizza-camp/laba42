<section class="top-menu">
  <%= link_to '#' do %>
    <%= content_tag :span, t(:active), class: "top-menu__item-active" %>
  <% end %>
  <%= link_to "#" do %>
    <%= content_tag :span, t(:inactive), class: "top-menu__item" %>
  <% end %>
</section>

<section class="customer__body">
    <div class="customer-body-wrapper">
      <% %w(new_apply applied choose_applier).each do |state| %>

        <%= link_to '', class:'customer__apply-item' do  %>
            <%= render partial: 'shared/apply_cards/apply-card', locals: {state: state} %>
        <% end %>

      <% end %>

        <%= link_to new_project_path, class:'customer__apply-item background-color-empty-card' do %>
           <%= render partial: 'shared/apply_cards/apply-card-empty' %>
        <%end %>

        </div>
</section>
