<div class="user-form">
  <h1 class="user-form__title"><%= t(:customer_registration_head_text) %></h1>
  <h2 class="user-form__subtitle"><%= t(:customer_registration_head_text_muted) %></h2>
  <%= form_with scope: :post, url: profile_path do %>
    <div class="form-field">
      <%= text_field_tag :company_name, '', class: "form-field", placeholder: t(:input_company_name) %>
    </div>
    <div class="form-field">
      <%= text_field_tag :phone_number, '', placeholder:  t(:input_phone) %>
    </div>
    <div class="user-form__center">
      <%= submit_tag t(:next_button), class: "button button--blue button--large user-form__button"%>
    </div>
  <% end %>
</div>
