<section class="signup">
    <h1 class="signup__title"><%= t(:greeting2) %></h1>
</section>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: t(:name) %>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder: t(:email) %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, placeholder: t(:password) %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: t(:password_confirmation) %>
  </div>
  <br />

  <div class="actions">
    <%= f.submit t(:sign_up) %>
  </div>
  <br />

<p class="signup__social"><%= t(:signup_social) %></p>

        <div class="login-first__buttons">
      <%= link_to do %>
        <%= content_tag :span, t(:google_btn), class: "button button--large button--white" %>
      <% end %>
      <%= link_to do %>
        <%= content_tag :span, t(:facebook_btn), class: "button button--large button--white" %>
      <% end %>
    </div>

<% end %>
