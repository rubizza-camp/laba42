<div class="login">
  <section class="login-first">
    <%= image_tag("clap.svg", alt: "clap", class: "login-first__image") %>
    <h1 class="login-first__title"><%= t(:greeting) %></h1>
    <p class="login-first__subtitle"><%= t(:introduce_yourself) %></p>
    <div class="login-first__buttons">
      <%= link_to omniauth_authorize_path(resource_name, :google_oauth2) do %>
        <%= content_tag :span, image_tag("google.svg", alt: "google", class: "button__image") + t(:google_btn), class: "button button--large button--white button--social login-first--mr-30" %>
      <% end %>
      <%= link_to omniauth_authorize_path(resource_name, :facebook) do %>
        <%= content_tag :span, image_tag("facebook.svg", alt: "facebook", class: "button__image") + t(:facebook_btn), class: "button button--large button--white button--social" %>
      <% end %>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t(:email) %>
      </div>
      <div class="form-field form-field__relative">
        <span class="form-field__image search--disable" id="eye_open_pass"><%= image_tag("eye.svg", alt: "eye") %></span>
        <span class="form-field__image" id="eye_closed_pass"><%= image_tag("closed-eye.svg", alt: "closed-eye") %></span>
        <%= f.password_field :password, id: "pass", autocomplete: "current-password", placeholder: t(:password) %>
      </div>
      <%= f.submit t(:log_in), class: "button button--blue button--login" %>
      <span class="form-field">
        <%= link_to t(:forgot_pass), new_password_path(resource_name) %>
      </span>
    <% end %>
    <div class="login-first__bottom">
      <%= link_to t(:sign_up), new_registration_path(resource_name) %>
      <span class="login-first__remark"><%= t(:remark_to_signup) %></span>
    </div>
  </section>
  <section class="login-second">
    <%= image_tag("login_pic.svg", alt: "login", class: "login-second__image") %>
  </section>
</div>



